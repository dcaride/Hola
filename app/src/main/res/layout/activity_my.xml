<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/miLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MyActivity">


    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensaje Toast"
        android:id="@+id/btnMensajeToast"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boton Alerta"
        android:id="@+id/btnAlerta"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/btnMensajeToast"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envía Nombre"
        android:id="@+id/btnCambia"
        android:layout_alignBaseline="@+id/editTextNombre"
        android:layout_alignBottom="@+id/editTextNombre"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNombre"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textViewNombre"
        android:layout_toLeftOf="@+id/btnCambia"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Introduce tú nombre:"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewNombre"
        android:layout_below="@+id/btnAlerta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
